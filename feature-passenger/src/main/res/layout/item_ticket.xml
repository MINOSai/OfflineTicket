<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_ticket_source"
        style="@style/TextMedium18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Source"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintEnd_toStartOf="@+id/textView6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/item_ticket_cost"
        app:layout_constraintTop_toTopOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView6"
        style="@style/TextLight12.Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to"
        app:layout_constraintBottom_toBottomOf="@+id/item_ticket_destination"
        app:layout_constraintEnd_toStartOf="@+id/item_ticket_destination"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/item_ticket_source"
        app:layout_constraintTop_toTopOf="@+id/item_ticket_destination" />

    <TextView
        android:id="@+id/item_ticket_destination"
        style="@style/TextMedium18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:gravity="end"
        android:text="Destination"
        app:layout_constraintBottom_toTopOf="@+id/item_ticket_timestamp"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/item_ticket_cost"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/item_ticket_cost"
        style="@style/TextBold36.Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_ticket_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Thursday, 24 October"
        app:layout_constraintBottom_toBottomOf="@+id/item_ticket_cost"
        app:layout_constraintStart_toEndOf="@+id/item_ticket_cost"
        app:layout_constraintTop_toBottomOf="@+id/item_ticket_destination" />
</androidx.constraintlayout.widget.ConstraintLayout>